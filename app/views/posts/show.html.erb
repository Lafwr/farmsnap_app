<h1><%= @post.farmer.name %>'s Post</h1>
<p><%= @post.caption %></p>

<% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image, class: "img-fluid", width: 300 %>
  <% end %>
<% end %>

<p><strong>Likes:</strong> <%= @post.likes.count %></p>
<%= link_to "Like", like_post_path(@post), method: :post, class: "btn btn-primary" %>

<% if current_user.farmer == @post.farmer %>
  <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<% end %>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><strong><%= comment.user.username %>:</strong> <%= comment.content %></p>
<% end %>

<%= form_with url: comment_post_path(@post), method: :post do |f| %>
  <%= f.text_area :content, class: "form-control", placeholder: "Write a comment..." %>
  <%= f.submit "Comment", class: "btn btn-success mt-2" %>
<% end %>
