<h1>Order <%= @crate.name %></h1>
<p>Price: $<%= @crate.price %></p>
<p>Pickup Details: <%= @crate.event%></p>

<%= form_with(model: @order, local: true) do |form| %>
  <h2>Order Details</h2>
  <div>
    <%= form.label :name, "Full Name" %>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.label :email, "Email Address" %>
    <%= form.email_field :email, required: true %>
  </div>

  <h2>Payment Details (Dummy)</h2>
  <div>
    <label for="cardholder_name">Cardholder Name</label>
    <input type="text" id="cardholder_name" name="cardholder_name" placeholder="John Doe" required />
  </div>
  <div>
    <label for="card_number">Card Number</label>
    <input type="text" id="card_number" name="card_number" placeholder="1234 5678 9012 3456" maxlength="16" pattern="\d*" required />
  </div>
  <div>
    <label for="expiry_date">Expiry Date (MM/YY)</label>
    <input type="text" id="expiry_date" name="expiry_date" placeholder="MM/YY" maxlength="5" required />
  </div>
  <div>
    <label for="cvv">CVV</label>
    <input type="text" id="cvv" name="cvv" placeholder="123" maxlength="3" pattern="\d*" required />
  </div>
  <div>
    <label for="postcode">Postcode</label>
    <input type="text" id="postcode" name="postcode" placeholder="12345" required />
  </div>

  <%= form.submit "Confirm Purchase", class: "btn btn-success" %>
<% end %>
