<div class="container mt-4" id="my-events-container">
  <h1 class="mb-3">My Events</h1>
  <h2 class="text-muted">Hey <%= current_user.username %> ðŸ‘‹</h2>

  <hr>

  <div class="d-flex gap-2">
    <%= link_to "Browse All Events", events_path, class: "btn btn-outline-green" %>
    <%= link_to "New Event", new_event_path, class: "btn btn-green" %>
  </div>

  <hr>

  <% if @my_events.any? %>
    <div class="row">
      <% @my_events.each do |event| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm border-0 event-card">
            <div class="card-body">
              <h4 class="card-title"><%= event.name %></h4>
              <p class="text-muted mb-2"><strong>Location:</strong> <%= event.location %></p>
              <p class="text-muted small">
                <strong>Starts:</strong> <%= event.start_time.strftime("%B %d, %Y %H:%M") %>
              </p>
              <div class="d-flex gap-2 mt-3">
                <%= link_to "Details", event_path(event), class: "btn btn-outline-green btn-sm" %>
                <%= link_to "Edit", edit_event_path(event), class: "btn btn-green btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">You have no events yet.</p>
  <% end %>

  <hr>

  <div class="text-center">
    <%# <%= link_to "<< Dashboard", dashboard_path, class: "btn btn-outline-green" %>
  </div>
</div>
