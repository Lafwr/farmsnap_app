<div class="search-container">
      <%= form_with(url: search_path, method: :get, local: true, class: 'search-form') do |form| %>
        <div class="search-input-group">
          <!-- Dropdown menu for category selection -->
          <%= form.select :category, options_for_select([["Events", "events"], ["Crates", "crates"]]), {}, class: "search-select" %>
          <!-- Search input field -->
          <%= form.text_field :query, placeholder: "Search location...", required: true, class: "search-input" %>
          <!-- Search button with icon -->
          <button type="submit" class="search-icon-button">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
      <% end %>
    </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <p class="card-text">
            📍 <strong>Location:</strong> <%= event.location %><br>
            🕒 <strong>Hours:</strong> <%= event.start_time.strftime("%l:%M %p") %> - <%= event.end_time.strftime("%l:%M %p") %><br>
            🏷 <strong>Categories:</strong> <%= event.categories.map(&:name).join(", ") %>
          </p>
          <%= link_to "View Event", event_path(event), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
